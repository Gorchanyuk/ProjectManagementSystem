									<mainClass>didgital.design.app.ProjectManagementSystem</mainClass>
								</manifest>
							</archive>
							<finalName>management_system-exec</finalName>
							<appendAssemblyId>false</appendAssemblyId>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

